
<body>
    <style>
		/* Các kiểu CSS cho trang giỏ hàng */
		body {
			font-family: Arial, sans-serif;
			margin: 0;
			padding: 0;
		}
		h1 {
			text-align: center;
			margin-top: 50px;
		}
		.container {
			max-width: 800px;
			margin: 0 auto;
			padding: 20px;
		}
		.product {
			display: flex;
			align-items: center;
			margin-bottom: 20px;
			padding: 10px;
			border: 1px solid #ccc;
		}
		.product img {
			max-width: 100px;
			margin-right: 20px;
		}
		.product-info {
			flex: 1;
		}
		.product-name {
			font-weight: bold;
			font-size: 20px;
			margin-bottom: 5px;
		}
		.product-price {
font-weight: bold;
			font-size: 16px;
			color: green;
			margin-bottom: 5px;
		}
		.product-quantity {
			font-size: 14px;
			color: #777;
			margin-bottom: 5px;
		}
		.product-delete {
			font-size: 14px;
			color: red;
			cursor: pointer;
			margin-left: auto;
		}
		.checkout {
text-align: center;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 20px;
}

.checkout-button {
	display: block;
  background-color: green;
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  font-weight: bold;
  border-radius: 4px;
  transition: background-color 0.3s ease;
}

.checkout-button:hover {
  background-color: darkgreen;
}
	</style>

	<h1>Giỏ hàng </h1>
	<div class="container">
		{{#each productList}}
		<div class="product">
			<img src="{{this.image}}" alt="{{this.name}}">
			<div class="product-info">
				<div class="product-name">{{this.name}}</div>
				<div class="product-price">giá: {{this.price}}đ</div>
				<div class="product-quantity">Số lượng: {{this.quantity}}</div>
				<div class="product-delete"><button onclick="deleteItem('{{this._id}}')">xóa</button></div>
			</div>
		</div>
		{{/each}}
		<div class="checkout">
			<button class="checkout-button">Thanh toán</button>
		</div>
	</div>
</body>
<script>
    function deleteItem(id) {
  fetch('/cart/'+id+'/delete', {
    method: 'DELETE'
  }).then(function(response) {
    // Xử lý kết quả trả về từ yêu cầu xóa ở đây
    window.location.reload(true);
  }).catch(function(error) {
    console.log('Không thể xóa mục: ', error);
  });
}
  </script>
</html>